[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120
indent_style = space
indent_size = 2

[*.{c,h}]
indent_style = space
indent_size = 4

[*.py]
insert_final_newline = false
indent_size = 4

[*.lua]
indent_style = space
indent_size = 2

